{
    "version": 2,
    "buildCommand": "npm run build",
    "devCommand": "npm run dev",
    "installCommand": "npm install",
    "framework": "nextjs",
    "rewrites": [
        {
            "source": "/:locale(en|id)/:path*",
            "destination": "/:locale/:path*"
        },
        {
            "source": "/:path*",
            "destination": "/en/:path*"
        }
    ],
    "builds": [
        {
            "src": "next.config.js",
            "use": "@vercel/next"
        }
    ],
    "build": {
        "env": {
            "NODE_OPTIONS": "--max-old-space-size=4096"
        }
    }
}